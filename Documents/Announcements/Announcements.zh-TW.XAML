<?xml version="1.0"?>
<controls:SettingsGroup xmlns:controls="using:APKInstaller.Controls" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Header="公告" Margin="0,-32,0,0">
    <controls:SettingsGroup.Resources>
        <x:String x:Key="Announcement">You can see all kinds of notifications here in the future. If you don't want to see them, you can turn them off in the settings below.</x:String>
        <x:String x:Key="Translations">Since the author only knows Chinese and English, all translations are left to the community. If you don't want to see an unfamiliar language, welcome to Crowdin to translate!</x:String>
    </controls:SettingsGroup.Resources>
    <InfoBar Title="更多翻譯" IsClosable="False" IsOpen="True" Message="{StaticResource Announcement}" Severity="Informational"/>
    <InfoBar Title="更多翻譯" IsClosable="True" IsOpen="True" Message="{StaticResource Translations}" Severity="Informational">
        <InfoBar.ActionButton>
            <HyperlinkButton HorizontalAlignment="Right" Content="點我前往" NavigateUri="https://crowdin.com/project/APKInstaller"/>
        </InfoBar.ActionButton>
    </InfoBar>
</controls:SettingsGroup>
